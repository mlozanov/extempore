;; flatten down to a list of lists
(define (flatten-1 list)
   (cond ((null? list) '())
	 ((and (list? (car list))
	       (list? (car (car list))))
	  (append (flatten-1 (car list)) (flatten-1 (cdr list))))
	 (else (cons (car list) (flatten-1 (cdr list))))))


