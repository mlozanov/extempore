;; Load which safely breaks on calling sys:load-escape
;;
(define *sys:load-escape-stack* (list *sys:toplevel-continuation*))

(define sys:load-escape
  (lambda (msg)
    (let ((k (car *sys:load-escape-stack*)))
      (if (not (equal? *sys:toplevel-continuation* k))
          (set! *sys:load-escape-stack* (cdr *sys:load-escape-stack*)))
      (k msg))))

(define sys:load-preload-check
  (lambda (libname)
    (if (not (or (symbol? libname) (string? libname)))
        (sys:load-escape "Error: lib-name must be symbol or string."))
    (if (not (ipc:get-process-name "primary"))
        (sys:load-escape "Error: xtlang libs must be loaded in primary process."))
    (if (defined? (string->symbol (string-append "*xtmlib-" (atom->string libname) "-loaded*")))
        (sys:load-escape (string-append (atom->string libname) " already loaded")))))

(define sys:load
  (lambda (path)
    (let ((in (open-input-file path))
          (msg (call/cc
                (lambda (k)
                  (set! *sys:load-escape-stack* (cons k *sys:load-escape-stack*))
                  ""))))
      (if (string=? msg "")
          (let loop ((sexpr (read in)))
            (if (eof-object? sexpr)
                (close-input-port in)
                (begin
                  (eval sexpr (interaction-environment))
                  (loop (read in))))
            #t)
          (let ((words (regex:split msg " ")))
            (close-input-port in)
            (ascii-print-color 0 5 10)
            (for-each (lambda (w) (print w "")) words)
            (ascii-print-color 0 7 10)
            (println)
            #f)))))

;; llvm module export helper

(define llvm-export-current-xtlang-module
  (lambda ()
    (llvm:export-module "/tmp/xtlang-module.bc")
    ;; print further instructions
    (print "\nLLVM bitcode for the xtlang standard library exported to \"/tmp/xtlang-module.bc\". To finish compiling the stdlib, enter the following command in a terminal window (inserting the proper path to your LLVM install):\n\n")
    (cond ((string=? (sys:platform) "Linux")
	   (print "/path/to/llvm-3.2/Release/bin/llc -O3 -relocation-model=pic -tailcallopt /tmp/xtlang-module.bc && gcc --shared -g /tmp/xtlang-module.s -o ./xtlang-module.so\n"))
	  ((string=? (sys:platform) "OSX")
	   (print "/path/to/llvm-3.2/bin/llc -O3 -relocation-model=pic -tailcallopt /tmp/xtlang-module.bc && clang -O3 -dynamiclib -undefined dynamic_lookup /tmp/xtlang-module.s -o ./xtlang-module.dylib\n"))
	  (else (print "Sorry, cannot find the appropriate compilation command for your platform at this time.")))))
